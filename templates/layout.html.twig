<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0,shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <link rel="icon" type="image/png" href="{{ asset('build/img/favicon.png') }}" />
    {{ encore_entry_link_tags('app') }}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
          integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <title>{% block title %}Sortir.com{% endblock %}</title>

</head>
<body>
<div class="container">
    <header>
        <div class="row align-items-start" style="padding-top: 10px;">
            <div class="col">
                <img src="{{ asset('build/img/logo.png') }}"  class="img-responsive"alt="Sortir.com"/>
            </div>

            <div class="col" style="text-align: right;padding-right: 10px; padding-top: 10px;">
                {% if app.user %}
                    {% include ('inc/nav.html.twig') %}
                    <div style="text-align: right;padding-right: 10px;">
                        <strong>Date du jour : {{ "now"|date ("d/m/Y") }} <br>
                            Participant : {{ app.user.username }}</strong>
                    </div>
                {% endif %}
            </div>
        </div>
    </header>
</div>
<main>
    {% block main %}{% endblock %}

</main>
<footer class="footer">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <span class="copyright">&copy;{{ "now"|date ("Y") }} Sortir.com</span>
            </div>
        </div>
    </div>
</footer>
{% block javaScript %}
{%  endblock %}
</body>
</html>



