<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0,shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <!-- Google fonts -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400;0,700;1,400;1,700&display=swap">

    <link rel="icon" type="image/png" href="{{ asset('build/img/favicon.png') }}" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    {{ encore_entry_link_tags('app') }}
    <title>{% block title %}Sortir.com{% endblock %}</title>

</head>
<body>
<div class="container-fluid">
    <header class="bg-light">
        <div class="row d-block d-lg-flex align-items-start">

            <nav class="navbar navbar-expand-lg navbar-light py-lg-4 sticky-top" id="mainNav">
                <a class="navbar-brand text-uppercase text-expanded font-weight-bold d-lg-none" href="#">Sortir.com</a>
                <button class="navbar-toggler mr-0" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <div class="col d-none d-lg-block">
                        <h1 class="text-center text-white">
                            <img src="{{ asset('build/img/logo.png') }}"  class="img-responsive"alt="Sortir.com"/>
                        </h1>
                    </div>
                    <div class="col">
                        {% include 'inc/nav.html.twig' %}
                        <div style="text-align: right;padding-right: 10px;">
                            <strong>Date du jour : {{ "now"|date ("d/m/Y") }} <br>
                                Participant : {{ app.user.username }}</strong>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </header>
</div>
<main>
    {% block main %}{% endblock %}
</main>
<footer class="footer">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <span class="copyright">&copy;{{ "now"|date ("Y") }} Sortir.com</span>
            </div>
        </div>
    </div>
</footer>

<!-- import JS / jQuery -->
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>

{% block javaScript %}{%  endblock %}
</body>
</html>

