{% extends 'layout.html.twig' %}

{% block title %}{{ outing.name }} | {{ parent() }}{% endblock %}

{% block main %}
    <div class="container mt-4 mb-5">
        <div class="d-flex justify-content-center h-100">
            <div class="card w-100">
                <div class="card-header">
                    <h3>Affichage d'une sortie</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-12 col-md-6">
                            <div class="input-group form-group flex-column flex-lg-row">
                                <div class="input-group-prepend">
                                    <span class="input-group-text mb-3 w-100">
                                       Nom de la sortie
                                    </span>
                                </div >
                                <div class="ml-0 form-control">
                                    {{ outing.name }}
                                </div>
                            </div>
                            <div class="input-group form-group flex-column flex-lg-row">
                                <div class="input-group-prepend">
                                    <span class="input-group-text mb-3 w-100">
                                        Date et heure de la sortie
                                    </span>
                                </div>
                                <div class="ml-0 form-control">
                                    {{ outing.dateTimeStart|date('d/m/Y') }} à {{ outing.dateTimeStart|date('H:i') }}
                                </div>
                            </div>
                            <div class="input-group form-group flex-column flex-lg-row">
                                <div class="input-group-prepend">
                                    <span class="input-group-text mb-3 w-100">
                                        Date limite d'inscription
                                    </span>
                                </div >
                                <div class="ml-0 form-control">
                                    {{ outing.dateLimitSigningUp|date('d/m/Y') }}
                                </div>
                            </div>
                            <div class="input-group form-group flex-column flex-lg-row">
                                <div class="input-group-prepend">
                                    <span class="input-group-text mb-3 w-100">
                                        Nombres de places
                                    </span>
                                </div >
                                <div class="ml-0 form-control">
                                    {{ outing.nbSigningUpMax }}
                                </div>
                            </div>
                            <div class="input-group form-group flex-column flex-lg-row">
                                <div class="input-group-prepend">
                                    <span class="input-group-text mb-3 w-100">
                                        Durée
                                    </span>
                                </div >
                                <div class="ml-0 form-control">
                                    {{ outing.duration }} minutes
                                </div>
                            </div>
                            <div class="input-group form-group flex-column flex-lg-row">
                                <div class="input-group-prepend h-100">
                                    <span class="input-group-text mb-3 w-100">
                                        Description et infos
                                    </span>
                                </div >
                                <textarea rows="3" class="ml-0 form-control">{{ outing.infosOuting }}</textarea>
                            </div>
                        </div>
                        <div class="col-12 col-md-6">
                            <div class="input-group form-group flex-column flex-lg-row">
                                <div class="input-group-prepend">
                                    <span class="input-group-text mb-3 w-100">
                                        Lieu
                                    </span>
                                </div >
                                <div class="ml-0 form-control">
                                    {{ outing.location.name }}
                                </div>
                            </div>
                            <div class="input-group form-group flex-column flex-lg-row">
                                <div class="input-group-prepend">
                                    <span class="input-group-text mb-3 w-100">
                                        Rue
                                    </span>
                                </div >
                                <div class="ml-0 form-control">
                                    {{ outing.location.street }}
                                </div>
                            </div>
                            <div class="input-group form-group flex-column flex-lg-row">
                                <div class="input-group-prepend">
                                    <span class="input-group-text mb-3 w-100">
                                        Code postal
                                    </span>
                                </div >
                                <div class="ml-0 form-control">
                                    {{ outing.location.city.zip }}
                                </div>
                            </div>
                            <div class="input-group form-group flex-column flex-lg-row">
                                <div class="input-group-prepend">
                                    <span class="input-group-text mb-3 w-100">
                                        Ville
                                    </span>
                                </div >
                                <div class="ml-0 form-control">
                                    {{ outing.location.city.name }}
                                </div>
                            </div>
                            <div class="input-group form-group flex-column flex-lg-row">
                                <div class="input-group-prepend">
                                    <span class="input-group-text mb-3 w-100">
                                        Latitude
                                    </span>
                                </div >
                                <div class="ml-0 form-control">
                                    {{ outing.location.latitude }}
                                </div>
                            </div>
                            <div class="input-group form-group flex-column flex-lg-row">
                                <div class="input-group-prepend">
                                    <span class="input-group-text mb-3 w-100">
                                        Longitude
                                    </span>
                                </div >
                                <div class="ml-0 form-control">
                                    {{ outing.location.longitude }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <p><svg class="bi bi-people-fill" width="1em" height="1em" viewBox="0 0 16 16" fill="rgba(224, 143, 44, 0.9)" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M7 14s-1 0-1-1 1-4 5-4 5 3 5 4-1 1-1 1H7zm4-6a3 3 0 100-6 3 3 0 000 6zm-5.784 6A2.238 2.238 0 015 13c0-1.355.68-2.75 1.936-3.72A6.325 6.325 0 005 9c-4 0-5 3-5 4s1 1 1 1h4.216zM4.5 8a2.5 2.5 0 100-5 2.5 2.5 0 000 5z" clip-rule="evenodd"/>
                        </svg>
                        Liste des participants
                    </p>
                    <table class="" style="display: inline-table !important; width: 400px">
                        <thead>
                            <tr>
                                <th scope="col">Pseudo</th>
                                <th scope="col">Nom</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for p in outing.participants %}
                            <tr>
                                <td>{{ p.username }}</td>
                                <td>{{ p.firstName }} {{ p.lastName|upper }}</td>
                            </tr>
                        {% else %}
                            <tr>
                                <td></td>
                                <td></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javaScript %}
{%  endblock %}
