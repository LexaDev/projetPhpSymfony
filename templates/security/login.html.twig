{% extends 'layout.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block main %}
    <div class="container mt-4 mb-3">
        <div class="d-flex justify-content-center h-100">
            <div class="card w-75">
                <div class="card-header">
                    <h3>Connexion</h3>
                </div>
                <div class="card-body">
                    {% if error %}
                        {% if error.messageKey|trans(error.messageData, 'security') == '1' %}
                            <div class="alert alert-danger">Votre compte a été désactiver</div>
                        {% else %}
                            <div class="alert alert-danger pl-4">Identifiants invalides</div>
                        {% endif %}
                    {% endif %}
                    <form method="post">
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <svg class="bi bi-person-fill" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                      <path fill-rule="evenodd" d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd"/>
                                    </svg>
                                </span>
                            </div>
                            <input type="text" class="ml-0 form-control" value="{{ last_username }}" name="username" placeholder="Pseudo / Email" required autofocus>
                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <svg class="bi bi-lock-fill" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                      <rect width="11" height="9" x="2.5" y="7" rx="2"/>
                                      <path fill-rule="evenodd" d="M4.5 4a3.5 3.5 0 117 0v3h-1V4a2.5 2.5 0 00-5 0v3h-1V4z" clip-rule="evenodd"/>
                                    </svg>
                                </span>
                            </div>
                            <input type="password" name="password" class="ml-0 form-control" placeholder="Mot de passe" required>
                        </div>

                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}"
                        >

                        <div class="row justify-content-center">
                            <div class="form-group">
                                <button class="btn btn-lg btn-primary m-2" type="submit">
                                    Se connecter
                                </button>
                                <div class="d-block d-lg-inline m-2">
                                    <input type="checkbox" id="remember" name="_remember_me">
                                    <label for="remember">Se souvenir de moi</label>
                                </div>
                            </div>
                        </div>

                    </form>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-center">
                        <a href="{{ path('forgotten_pwd') }}">Mot de passe oublié ?</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
